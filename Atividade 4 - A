using System;

namespace Atividade_4__A
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Qual a sua idade: ");
			int idade = Convert.ToInt32(Console.ReadLine().ToLower());
			Console.WriteLine("Você possui uma carteira de motorista? 's' ou 'n' ");
			char carteira = Convert.ToChar(Console.ReadLine());
			
			if (idade > 18 && carteira == 's') {
				Console.WriteLine("Você pode dirigir");
			}else{
				Console.WriteLine("Você não pode dirigir");
			}
			
			
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}

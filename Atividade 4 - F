using System;

namespace Atividade_4__F
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Você deseja adicionar açucar ou leite ao seu café? ");
			String adicional = Convert.ToString(Console.ReadLine().ToLower());
			
			
			if (adicional == "cafe" || adicional == "leite" || adicional == "café") {
				Console.WriteLine("Café com adicional preparado!");
			}
			
			
			
			Console.Write("Press any key to continue . . . ");	
			Console.ReadKey(true);
		}
	}
}
